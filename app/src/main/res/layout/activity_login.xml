        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:weightSum="3">

            <EditText
                android:id="@+id/txtvar"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="15dp"
                android:layout_weight="2"
                android:ems="10"
                android:hint="اسم المجلد"
                android:inputType="text"
                android:lineSpacingExtra="12sp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="#d9000000"
                android:textSize="14sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/settings"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:src="@drawable/ic_gear"
                android:visibility="gone">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">


            <CheckBox
                android:id="@+id/svpasschBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:checked="false"
                android:fontFamily="@font/ajannatregular"
                android:layoutDirection="ltr"
                android:text="save password"
                android:textColor="#a6000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/lbresetuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10sp"
                android:text="Forgot Password?"
                android:textColor="#a6000000"
                android:textSize="12sp"
                app:fontFamily="@font/ajannatregular" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="263dp"
            android:gravity="center_horizontal"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/action_button"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btnlogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sign in"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="14sp"
                app:fontFamily="@font/ajannatregular" />

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/imgLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:indicatorColor="#FFF"
                app:indicatorName="PacmanIndicator" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/txtIcd10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10sp"
                android:onClick="showicd10"
                android:text="Search ICD10"
                android:textColor="#a6000000"
                android:textSize="12sp"
                android:textStyle="bold"
                app:fontFamily="@font/ajannatbold" />

        </LinearLayout>
