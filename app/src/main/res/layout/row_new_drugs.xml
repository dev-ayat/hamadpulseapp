<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/card_view_style"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="2dp"
        android:paddingBottom="5dp">

        <AutoCompleteTextView
            android:id="@+id/txti_Drug"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/edit_text_background"
            android:hint="Drug" />

        <EditText
            android:id="@+id/txti_Dosing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:background="@drawable/edit_text_background"
            android:gravity="center"
            android:hint="Dosing" />

        <EditText
            android:id="@+id/txti_DoseMOD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:gravity="center"
            android:hint="Dose MOD.(%)" />

        <Spinner
            android:id="@+id/final_dose_sp"
            style="@style/spinner_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="1dp"
            android:entries="@array/Final_Dose_Cat" />

        <EditText
            android:id="@+id/txti_FinalDose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:gravity="center"
            android:hint="Final Dose"
            android:layout_marginEnd="1dp" />

        <EditText
            android:id="@+id/txti_Route"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:background="@drawable/edit_text_background"
            android:gravity="center"
            android:hint="Route" />

        <EditText
            android:id="@+id/txti_Frequency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:background="@drawable/edit_text_background"
            android:gravity="center"
            android:hint="frequency" />

        <TextView
            android:id="@+id/txti_SpecialInstructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="2dp"
            android:text="Show Instructions"
            android:textColor="@color/colorAccent" />

        <ImageButton
            android:id="@+id/btn_delete_drug"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:backgroundTint="@android:color/transparent"
            android:gravity="center"
            android:src="@drawable/available_medicine" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
