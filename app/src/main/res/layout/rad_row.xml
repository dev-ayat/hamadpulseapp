<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hscroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:scrollbars="none"
    android:clickable="true">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/card_view_style">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/delete_img_btn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@color/colorCancel"
                            android:src="@drawable/delete" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/doctor" />

                <TextView
                    android:id="@+id/radDocName"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Doc Name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rowFG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:tag="cards main container"
                android:visibility="visible">

                <!--            <androidx.cardview.widget.CardView-->
                <!--                android:id="@+id/card_view"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_marginBottom="5dp"-->
                <!--                android:padding="10dp"-->
                <!--                card_view:cardBackgroundColor="@color/viewBg"-->
                <!--                card_view:cardCornerRadius="10dp"-->
                <!--                card_view:cardElevation="5dp">-->
                <!--               android:background="@android:color/white"-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <!--                        <TextView-->
                        <!--                            android:id="@+id/lblradservice"-->
                        <!--                            android:layout_width="0dp"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:layout_gravity="right"-->
                        <!--                            android:layout_weight="2"-->
                        <!--                            android:text="نوع الصورة:"-->
                        <!--                            android:textAppearance="?android:attr/textAppearanceSmall"-->
                        <!--                            android:textColor="@color/colorAccent" />-->

                        <TextView
                            android:id="@+id/txtradservice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <!--                        <TextView-->
                        <!--                            android:id="@+id/lbldate"-->
                        <!--                            android:layout_width="0dp"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:layout_gravity="right"-->
